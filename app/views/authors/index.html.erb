<style>
    table, th, td {
        padding: 20px;
        border: 2px solid black; 
        border-collapse: collapse;
    }
</style>

<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
    </tr>
    <% @authors.each do | author | %>     
        <tr>
            <td><%= author.name %></td>
            <td><%= author.homepage %></td>
            <td><%= link_to "more", author_path(author) %></td>
            <td><%= link_to "edit", edit_author_path(author) %></td>
            <td><%= link_to "delete", author_path(author), method: :delete %></td>
        </tr>
    <% end %>
</table>

<%= link_to "New", new_author_path %>