<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Author</th>
    </tr>
  </thead>

  <tbody>
    <% @paper.authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <strong>Title:</strong>
  <%= @paper.title %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @paper.venue %>
</p>

<p>
  <strong>Year:</strong>
  <%= @paper.year %>
</p>

<%= link_to 'Edit', edit_paper_path(@paper) %> |
<%= link_to 'Back', papers_path %>
